@model BugTracker.Models.Bug

@{
    ViewData["Title"] = "Delete";
}


<div class="delete">
    <h1 class="title">Are you sure you want to delete this?</h1>
    <dl class="delete-page">
        <dt>
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Severity)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Severity)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Priority)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Priority)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt>
            Type
        </dt>
        <dd>
            @Html.DisplayFor(model => model.BugType)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Reporter)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Reporter)
        </dd>
        <dt>
            Assigned Dev
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ApplicationUser.Email)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Created)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Created)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Updated)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Updated)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Summary)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Summary)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Project)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Project.Name)
        </dd>
    </dl>
    
    <form class="lower-buttons" asp-action="Delete">
        @if (User.IsInRole("Manager") || User.IsInRole("QA Engineer") || User.IsInRole("Admin"))
        {
            <a class="lower-btn" asp-action="Index">Back to Bugs</a>
        }
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn" />
        @if (User.IsInRole("Developer") || User.IsInRole("QA Engineer") || User.IsInRole("Manager") || User.IsInRole("Admin"))
        {
            <a class="lower-btn" asp-controller="Bugs" asp-action="BugsOfProject" asp-route-id="@Model.ProjectId">Back to Project Bugs</a>
        }
    </form>
</div>
